{
  "name": "mroz",
  "version": "0.0.1",
  "main": "lib/index.js",
  "scripts": {
    "build:npm": "babel ./src --out-dir ./lib",
    "build": "mkdir -p ./lib && npm-run-all build:npm",
    "clean": "rm -rf ./lib ./node_modules",
    "jest:watch": "jest --watch",
    "jest": "jest",
    "rimraf-babel-cache": "rimraf node_modules/.cache/babel-loader",
    "test": "jest",
    "watch:lib": "babel --watch --out-dir ./lib ./src",
    "watch": "npm-run-all --parallel --print-label watch:lib"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel": "^6.23.0",
    "jest": "^20.0.4",
    "react-redux": "^5.0.5",
    "react": "^15.6.1"
  },
  "dependencies": {
    "backo": "^1.1.0",
    "lodash": "^4.17.4",
    "npm-run-all": "^4.0.2",
    "ramda": "^0.24.1",
    "redux-actions": "^2.2.1",
    "redux-form": "^7.0.0",
    "redux-logger": "^3.0.6",
    "redux-mock-store": "^1.2.3",
    "redux-observable": "^0.14.1",
    "redux-thunk": "^2.2.0",
    "redux": "^3.7.1",
    "rxjs": "^5.4.2"
  },
  "peerDependencies": {
    "react-redux": "^5.0.0",
    "react": "^15.0.0-0 || ^16.0.0-0"
  },
  "jest": {
    "collectCoverageFrom": ["src/**/*.{js,jsx}"],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).js?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transformIgnorePatterns": ["[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    }
  }
}
